@typeparam TListItem

<div class="listAndDetailView border rounded-lg row gx-0">
    @if (ListItemView != null)
    {
        <nav class="col-12 col-md-4 col-lg-3">
            <div class="dropdown d-md-none">
                <a class="btn btn-secondary dropdown-toggle w-100" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                    @(CurrentListItem != null ? ListItemView(CurrentListItem) : @<span>Select a Dungeon</span>)
                </a>
                <ul class="dropdown-menu w-100">
                    @foreach (var listItem in List)
                    {
                        <li class="dropdown-item">
                            <a class="dropdown-item @(listItem == CurrentListItem ? "active" : string.Empty)" href="#" @onclick="e => SetActiveListItem(listItem)">
                                @ListItemView(listItem)
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <div class="list-group d-none d-md-block h-100 list-group-flush border-right">
                @foreach (var listItem in List)
                {
                <a class="list-group-item list-group-item-action @(listItem == CurrentListItem ? "active" : string.Empty)" href="#" @onclick="e => SetActiveListItem(listItem)">
                        @ListItemView(listItem)
                </a>
                }
            </div>
        </nav>
    }
    @if (DetailView != null && CurrentListItem != null)
    {
        <section class="p-2 col-12 col-md">
            @DetailView(CurrentListItem)
        </section>
    }
</div>
