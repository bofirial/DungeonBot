<div id="@Id" class="modal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @if (!string.IsNullOrEmpty(ModalTitle))
            {
                <div class="modal-header">
                    <h5 class="modal-title">@ModalTitle</h5>
                </div>
            }
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@inject IJSRuntime JSRuntime

@code {
    [Parameter]
    public string? ModalTitle { get; set; }

    [Parameter]
    public string Id { get; set; } = Guid.NewGuid().ToString();

    public async Task StartSpinnerAsync()
    {
        await JSRuntime.InvokeVoidAsync("launchModal", Id, false);
    }

    public async Task StopSpinnerAsync()
    {
        await JSRuntime.InvokeVoidAsync("closeModal", Id);
    }
}
