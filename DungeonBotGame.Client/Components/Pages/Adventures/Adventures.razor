@page "/"

@inherits Fluxor.Blazor.Web.Components.FluxorComponent;

@using Fluxor;
@using Store.Adventures;
@using DungeonBotGame.Models.ViewModels;

@inject IState<AdventureState> AdventureState

<h1>Adventures</h1>

<ListAndDetailView TListItem="AdventureViewModel" List="@AdventureState.Value.Adventures" KeyFunction="@((adventure) => adventure.Name)" SelectAnItemText="Select an Adventure">
    <ListItemView>
        @if (context.ListItem != null)
        {
            @context.ListItem.Name

            if (context.ListItem.AdventureResults != null && context.ListItem.AdventureResults.Any())
            {
                var iconClass = string.Empty;

                if (context.ListItem.AdventureResults.Last().Success)
                {
                    if (!context.IsCurrentListItem)
                    {
                        iconClass = "text-success";
                    }

                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check-circle-fill mx-2 @iconClass" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg>
                }
                else
                {
                    if (!context.IsCurrentListItem)
                    {
                        iconClass = "text-danger";
                    }

                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-circle-fill mx-2 @iconClass" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                    </svg>
                }
            }
        }
    </ListItemView>
    <DetailView>
        <AdventureDetail Adventure="@context"></AdventureDetail>
    </DetailView>
</ListAndDetailView>
